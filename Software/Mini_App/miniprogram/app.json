{
  "pages": [
    "pages/index/index",
    "pages/control/control",
    "pages/tracking/tracking",
    "pages/group/group",
    "pages/settings/settings",
    "pages/device/device",
    "pages/logs/logs"
  ],
  "window": {
    "backgroundTextStyle": "light",
    "navigationBarBackgroundColor": "#07c160",
    "navigationBarTitleText": "智能自行车尾灯",
    "navigationBarTextStyle": "white",
    "backgroundColor": "#f5f5f5",
    "enablePullDownRefresh": true
  },
  "tabBar": {
    "color": "#999999",
    "selectedColor": "#07c160",
    "backgroundColor": "#ffffff",
    "borderStyle": "black",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "首页",
        "iconPath": "images/tab/home.png",
        "selectedIconPath": "images/tab/home-active.png"
      },
      {
        "pagePath": "pages/control/control",
        "text": "控制",
        "iconPath": "images/tab/control.png",
        "selectedIconPath": "images/tab/control-active.png"
      },
      {
        "pagePath": "pages/tracking/tracking",
        "text": "轨迹",
        "iconPath": "images/tab/tracking.png",
        "selectedIconPath": "images/tab/tracking-active.png"
      },
      {
        "pagePath": "pages/group/group",
        "text": "车队",
        "iconPath": "images/tab/group.png",
        "selectedIconPath": "images/tab/group-active.png"
      },
      {
        "pagePath": "pages/settings/settings",
        "text": "设置",
        "iconPath": "images/tab/settings.png",
        "selectedIconPath": "images/tab/settings-active.png"
      }
    ]
  },
  "permission": {
    "scope.userLocation": {
      "desc": "需要获取您的位置来记录骑行轨迹"
    },
    "scope.bluetooth": {
      "desc": "需要蓝牙权限来连接设备"
    },
    "scope.writePhotosAlbum": {
      "desc": "需要保存图片到相册"
    }
  },
  "requiredPrivateInfos": [
    "getLocation",
    "chooseLocation",
    "onLocationChange",
    "startLocationUpdate"
  ],
  "networkTimeout": {
    "request": 10000,
    "connectSocket": 10000,
    "uploadFile": 10000,
    "downloadFile": 10000
  },
  "debug": true,
  "style": "v2",
  "sitemapLocation": "sitemap.json",
  "lazyCodeLoading": "requiredComponents"
}