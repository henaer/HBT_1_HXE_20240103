/**app.wxss**/
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', SimSun, sans-serif;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 通用样式 */
.page-container {
  min-height: 100vh;
  background: #f5f5f5;
}

.section {
  background: white;
  border-radius: 16rpx;
  margin: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 按钮样式 */
.primary-btn {
  background: linear-gradient(135deg, #07c160, #05a84e);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 40rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.primary-btn:active {
  opacity: 0.8;
}

.secondary-btn {
  background: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 40rpx;
  font-size: 32rpx;
}

/* 输入框样式 */
.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.input-field {
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.input-field:focus {
  border-color: #07c160;
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.card-content {
  color: #666;
  font-size: 28rpx;
  line-height: 1.6;
}

/* 状态指示器 */
.status-online {
  color: #07c160;
  font-size: 24rpx;
}

.status-offline {
  color: #999;
  font-size: 24rpx;
}

.status-warning {
  color: #ff6b35;
  font-size: 24rpx;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  text-align: center;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.5;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #ccc;
  margin-bottom: 40rpx;
}

/* 响应式设计 */
@media (max-width: 480px) {
  .section {
    margin: 16rpx;
    padding: 24rpx;
  }
  
  .section-title {
    font-size: 30rpx;
  }
  
  .primary-btn, .secondary-btn {
    padding: 20rpx 32rpx;
    font-size: 30rpx;
  }
}